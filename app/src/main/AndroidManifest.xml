<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Restaurant"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Restaurant">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add your MenuPrincipal activity -->
        <activity
            android:name=".MenuPrincipal"
            android:label="@string/app_name"
            android:theme="@style/Theme.Restaurant" />

        <activity
            android:name=".Usuario"
            android:label="@string/app_name"
            android:theme="@style/Theme.Restaurant" />

        <activity
            android:name=".UsuarioCreate"
            android:label="@string/app_name"
            android:theme="@style/Theme.Restaurant" />

        <activity
            android:name=".UsuarioUpdate"
            android:label="@string/app_name"
            android:theme="@style/Theme.Restaurant" />

        <activity
            android:name=".IvaUpdate"
            android:label="@string/app_name"
            android:theme="@style/Theme.Restaurant" />

        <activity
            android:name=".Categoria"
            android:label="@string/app_name"
            android:theme="@style/Theme.Restaurant" />

        <activity
            android:name=".CategoriaCreate"
            android:label="@string/app_name"
            android:theme="@style/Theme.Restaurant" />

        <activity
            android:name=".CategoriaUpdate"
            android:label="@string/app_name"
            android:theme="@style/Theme.Restaurant" />

        <activity
            android:name=".Producto"
            android:label="@string/app_name"
            android:theme="@style/Theme.Restaurant" />

        <activity
            android:name=".ProductoCreate"
            android:label="@string/app_name"
            android:theme="@style/Theme.Restaurant" />

        <activity
            android:name=".ProductoUpdate"
            android:label="@string/app_name"
            android:theme="@style/Theme.Restaurant" />
    </application>

</manifest>